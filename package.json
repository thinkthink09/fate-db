{
	"name": "fatedb",
	"version": "1.0.0",
	"description": "A file-based database system for those who don't want to go through the burden of DB maintenance",
	"main": "index.js",
	"types": "index.d.ts",
	"exports": {
		".": "./index.js"
	},
	"type": "module",
	"scripts": {
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest --detectOpenHandles",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest --coverage"
	},
	"keywords": [
		"database",
		"file-based",
		"storage",
		"logging",
		"json"
	],
	"author": "fatedeath",
	"license": "MIT",
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"jest": "^29.7.0"
	},
	"jest": {
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src"
		]
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"files": [
		"src/",
		"index.js",
		"index.d.ts",
		"README.md",
		"LICENSE",
		"samples/"
	]
}
